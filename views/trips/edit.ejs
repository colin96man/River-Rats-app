<%- include('../partials/header.ejs') %>

<form class="trip-form" action="/trips/<%= trip._id %>?_method=PUT" method="POST">
    
    <label>Location:</label>
    <input type="text" name="location" value="<%= trip.location %>"><br>
    <label>Picture (URL):</label>
    <input type="text" name="picture" value="<%= trip.picture %>"><br>
    <label>Date:</label>
    <input type="date" name="date" placeholder="<%= trip.date %>"><br>
    <label>Trip Length (in days):</label>
    <input type="number" name="length" value="<%= trip.length %>"><br>
    <input type="submit" value="Update Trip">

</form>

